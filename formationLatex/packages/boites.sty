% Command for Text with QR Code
\NewDocumentCommand{\ConsigneQRCode}{ O{15mm} m m }
{
  \qrset{link,height=#1}
  \begin{tblr}{width={\linewidth},colspec={Q[l,m]Q[t,1em]Q[l,m]},rowsep=0pt,colsep=0pt}
    \qrcode{#3} & & {{{#2}}}
  \end{tblr}
}

