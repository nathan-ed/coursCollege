\ProvidesPackage{bandeaux}%
\RequirePackage{nopageno}%
\RequirePackage{background}%
\RequirePackage{ifoddpage}%
\RequirePackage{tikzpagenodes}%
% options 
\RequirePackage{kvoptions} % key-value options pour passer titre, thème etc
\newcommand{\TypeTitle}{SE SOUVENIR}%
\newcommand{\TypeIcon}{\faBrain}%
\DeclareVoidOption{exercices}{%
  \renewcommand{\TypeTitle}{EXERCICES}%
  \renewcommand{\TypeIcon}{\faPencil*}%
}%
\DeclareVoidOption{rappels}{%
\renewcommand{\TypeTitle}{RAPPELS}%
\renewcommand{\TypeIcon}{\faCompass}%
}%
\DeclareVoidOption{objectif}{%
  \renewcommand{\TypeTitle}{OBJECTIF}%
  \renewcommand{\TypeIcon}{\faBullseye}%
}%
\DeclareVoidOption{fiche}{%
  \renewcommand{\TypeTitle}{FICHE N°}%
  \renewcommand{\TypeIcon}{\faCogs}%
}%
\DeclareVoidOption{formative}{%
  \renewcommand{\TypeTitle}{SE PRÉPARER}%
  \renewcommand{\TypeIcon}{\faDumbbell}%
}%
\DeclareVoidOption{finale}{%
\renewcommand{\TypeTitle}{SE TESTER}%
\renewcommand{\TypeIcon}{\faMedal}%
}%
\DeclareVoidOption{memoire}{%
\renewcommand{\TypeTitle}{MÉMORISER}%
\renewcommand{\TypeIcon}{\faBrain}%
}%
\DeclareDefaultOption{\PackageWarning{bandeaux}{Unknown '\CurrentOption'}}%
\DeclareStringOption[SIXIÈME]{niveau}%
\DeclareStringOption[101]{nfiche}
\DeclareStringOption[2024--2025]{annee}
\DeclareStringOption[ns]{auteur}
\DeclareStringOption[colorPrim]{couleur}%
\DeclareStringOption[Mon Thème]{theme}%
\DeclareStringOption[1]{opacite}%
\DeclareBoolOption[false]{top}%
\DeclareBoolOption[false]{nobackground}%
\DeclareBoolOption[false]{nopagenumber}%
\ProcessKeyvalOptions*%
\ifbandeaux@nobackground%
  \backgroundsetup{%
  scale=1,%
  opacity=1,%
  angle=0,%
  contents={%
  \begin{tikzpicture}[remember picture,overlay]%
    \node[DarkGray, anchor=west] at (current page footer area.west) {%
    \bandeaux@annee};
  \node[DarkGray, anchor=east] at (current page footer area.east) {%
	\hfill \bandeaux@auteur};%
    \node[DarkGray] at (current page footer area) {%
	    \ifbandeaux@nopagenumber{}\else{\thepage/\pageref{LastPage}}\fi
    };%
  \end{tikzpicture}%
  }}%
 
\AtBeginDocument{%
\begin{tikzpicture}[remember picture,overlay]
    % Add a rounded rectangle frame
    \draw[line width=1pt, rounded corners=5pt] 
      ([xshift=5mm,yshift=-5mm]current page.north west) 
      rectangle 
      ([xshift=-5mm,yshift=-20mm]current page.north east);

    % Icon
    \node[rectangle, rounded corners=5pt, minimum height=1cm, minimum width=2cm, fill=white, text=black] 
      (symbole) at ([xshift=15.2mm, yshift=-10.2mm]current page.north west) {\large \bandeaux@niveau};

    % Title
    \node[below=-2mm of symbole.south west, anchor=north west, inner sep=4pt, outer sep=0pt] 
      (type) {\titlefont \TypeTitle \bandeaux@nfiche};

    % Theme (centered in the box)
    \node[anchor=center] (theme) at ([yshift=-13mm]current page.north) 
      {\Large \bandeaux@theme};
\end{tikzpicture}
  \par%
}
\else%
  \backgroundsetup{%
      scale=1,%
      opacity=\bandeaux@opacite,%
      angle=0,%
      color=black,%
      contents={%
      \ifbandeaux@top%
        % titre en haut de la page
        %\checkoddpage%
          %\ifoddpage%
            \begin{tikzpicture}[remember picture,overlay]%
              \node[DarkGray] at (current page footer area) {%
                \ifbandeaux@nopagenumber{}\else{\condensedfont \thepage}\fi%
              };%
              \fill[LightGray!30] (current page.north west) rectangle ([yshift=-30mm]current page.north east);%
              \node[rectangle,minimum height=2cm,minimum width=2cm,fill=\bandeaux@couleur,text=white] (symbole) at ([xshift=15mm,yshift=-15mm]current page.north west) {\huge \TypeIcon};%
              \node[right=2mm of symbole, anchor=north,rotate=90] (type) {\titlefont \TypeTitle \bandeaux@nfiche};%
              \node[right=15mm of type.south,anchor=west] (niveau) {\huge \bandeaux@niveau};%
              \node[right=20mm of niveau.base east,anchor=base west] (theme) {\large\cursivefont \bandeaux@theme};%
              \node[minimum width=10pt, minimum height=10pt,fill=black,circle,anchor=south] (mark) at ($(niveau.base east)!0.5!(theme.base west)$) {};%
            \end{tikzpicture}%
          \else%
            \begin{tikzpicture}[remember picture,overlay]%
              \node[DarkGray] at (current page footer area) {%
                \ifbackground@nopagenumber{}\else{\condensedfont \thepage}%
              };%
            \end{tikzpicture}%
          %\fi%
      \else%
        % titre sur le côté de la page
        \checkoddpage%
        \ifoddpage%
          \begin{tikzpicture}[remember picture,overlay]%
            \fill[LightGray!30] (current page.north west) rectangle ([xshift=25mm]current page.south west);%
            \node[white] at ([xshift=12.5mm,yshift=15mm]current page.south west) {%
              \ifbandeaux@nopagenumber{}\else{\fontsize{32pt}{36pt}\condensedfont \thepage}\fi%
              };%
            \node[rectangle,minimum height=2cm,minimum width=2cm,fill=\bandeaux@couleur,text=white] (symbole) at ([xshift=12.5mm,yshift=-15mm]current page.north west) {\huge \TypeIcon};%
            \node[below=2mm of symbole, anchor=north] (type) {\titlefont \TypeTitle \bandeaux@nfiche};%
            \node[below=15mm of type.south,rotate=90,anchor=east] (theme) {\large\cursivefont \bandeaux@theme};%
            \node[minimum width=10pt, minimum height=10pt,fill=black,below=8mm of theme.west,circle] (mark) {};%
            \node[below=8mm of mark.south,rotate=90,anchor=east] (niveau) {\huge \bandeaux@niveau };%
          \end{tikzpicture}%
        \else%
          \begin{tikzpicture}[remember picture,overlay]%
            \node[LightGray,font=\huge] at ([xshift=-15mm,yshift=15mm]current page.south east) {%
              \ifbandeaux@nopagenumber{}\else{\fontsize{32pt}{36pt}\condensedfont \thepage}\fi%
            };%
          \end{tikzpicture}%
        \fi%
      \fi%
      }%
  }%
\fi%
