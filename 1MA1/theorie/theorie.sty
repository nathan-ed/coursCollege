\newcommand{\textLigneSec}[2]{\myrulefill {\bfseries\vspace{1em} #1. #2} \myrulefill\par}
\renewcommand*\thesection{\arabic{section}}

% Use the \textLigne command for sections with numbering
\titleformat{\section}
  {\normalfont\Large} % Apply normal font, large size
  {} % No additional formatting for the number
  {0pt} % No additional horizontal space
  {\textLigneSec{\thesection}} % Incorporate the section number within the \textLigne command

% Adjust the spacing before and after the section title
\titlespacing*{\section}
  {0pt}{10pt}{-20pt}


